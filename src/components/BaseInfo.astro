---
const { name, position, avatarUrl } = Astro.props;
---

<div>
  <div class="flex items-center justify-center mb-4">
    <div class="w-16 h-16 bg-gray-300 rounded-full overflow-hidden">
      <!-- Add your avatar image here -->
      <img src={`${avatarUrl}`} alt="Avatar" class="object-cover w-full h-full">
    </div>
  </div>

  <!-- 姓名、职位 -->
  <h1 class="text-2xl font-bold mb-8">{name}</h1>
  <div class="text-sm text-gray-500 mb-8">{position}</div>
</div>